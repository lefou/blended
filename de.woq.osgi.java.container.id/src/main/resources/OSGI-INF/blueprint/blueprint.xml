<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean
    id="identifier" class="de.woq.blended.container.id.internal.ContainerIdentifierServiceImpl"
    init-method="init" destroy-method="destroy" scope="singleton">

    <argument index="0" ref="blueprintBundleContext" />
    <argument index="1">
      <reference interface="de.woq.osgi.java.container.context.ContainerContext" timeout="1000" />
    </argument>
  </bean>

</blueprint>
