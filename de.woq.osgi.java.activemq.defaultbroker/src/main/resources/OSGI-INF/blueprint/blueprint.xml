<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
>

  <cm:property-placeholder persistent-id="de.woq.osgi.java.activemq.defaultbroker">
    <cm:default-properties>
      <cm:property name="brokerPort" value="61616" />
    </cm:default-properties>
  </cm:property-placeholder>


  <bean id="startCompleter"
    class="de.woq.osgi.java.activemq.brokerstarter.ActiveMQBrokerStarter"
    init-method="init">

    <argument index="0">
      <amq:broker xmlns:amq="http://activemq.apache.org/schema/core" brokerName="sib" useJmx="true" persistent="true" advisorySupport="false">

        <amq:managementContext>
          <amq:managementContext createConnector="false" />
        </amq:managementContext>

        <amq:persistenceAdapter>
          <amq:kahaDB directory="amq/kahadb" indexWriteBatchSize="1000" enableIndexWriteAsync="true" enableJournalDiskSyncs="false" />
        </amq:persistenceAdapter>

        <amq:transportConnectors>
          <amq:transportConnector name="openWire" uri="tcp://0.0.0.0:${brokerPort}" />
        </amq:transportConnectors>

        <amq:systemUsage>
          <amq:systemUsage sendFailIfNoSpaceAfterTimeout="10000">
            <amq:memoryUsage>
              <amq:memoryUsage limit="50mb" />
            </amq:memoryUsage>
            <amq:storeUsage>
              <amq:storeUsage limit="250mb" />
            </amq:storeUsage>
            <amq:tempUsage>
              <amq:tempUsage limit="250mb" />
            </amq:tempUsage>
          </amq:systemUsage>
        </amq:systemUsage>

      </amq:broker>
    </argument>

    <argument index="1">
      <reference interface="de.woq.osgi.java.startcompletion.StartCompletionService" timeout="1000" />
    </argument>

    <argument index="2" value="activemq.broker" />
  </bean>

  <bean id="connectionFactory" class="org.springframework.jms.connection.CachingConnectionFactory">
    <argument index="0">
      <bean class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="vm://sib" />
      </bean>
    </argument>
  </bean>

  <service interface="javax.jms.ConnectionFactory" ref="connectionFactory">
    <service-properties>
      <entry key="provider" value="activemq" />
    </service-properties>
  </service>

</blueprint>
