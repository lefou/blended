<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>de.woq.osgi.java</groupId>
    <artifactId>de.woq.osgi.java.parent</artifactId>
    <version>1.0-alpha-5-SNAPSHOT</version>
    <relativePath>../de.woq.osgi.java.parent</relativePath>
  </parent>

  <artifactId>de.woq.osgi.java.itest</artifactId>

  <properties>
    <containerGroupId>de.woq.osgi.java.assembly</containerGroupId>
    <containerArtifactId>de.woq.osgi.java.assembly.common</containerArtifactId>
    <containerVersion>${woq.container.version}</containerVersion>
  </properties>

  <dependencies>

    <dependency>
      <groupId>de.woq.osgi.java</groupId>
      <artifactId>de.woq.osgi.java.itestsupport</artifactId>
      <version>${woq.container.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-exec</artifactId>
      <version>${commons.exec.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>${containerGroupId}</groupId>
      <artifactId>${containerArtifactId}</artifactId>
      <version>${containerVersion}</version>
      <classifier>bin</classifier>
      <type>zip</type>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <followSymLinks>false</followSymLinks>
          <filesets>
            <fileset>
              <directory>${basedir}/common</directory>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>ExtractJars</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeScope>test</includeScope>
              <outputDirectory>${project.build.directory}/container</outputDirectory>
              <includeArtifactIds>${containerArtifactId}</includeArtifactIds>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

