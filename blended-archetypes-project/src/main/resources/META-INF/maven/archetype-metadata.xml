<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="de.woq.blended.akka.reactor"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <requiredProperties>
    <requiredProperty key="targetGroupId" />
    <requiredProperty key="targetArtifactId" />
    <requiredProperty key="targetVersion" />
    <requiredProperty key="targetFeature" />
  </requiredProperties>

  <fileSets>

    <!-- The root project files -->

    <fileSet encoding="UTF-8" filtered="false" packaged="false">
      <directory></directory>
      <includes>
        <include>.gitignore</include>
        <include>README.md</include>
        <include>LICENSE</include>
      </includes>
    </fileSet>

    <fileSet encoding="UTF-8" filtered="true" packaged="false">
      <directory></directory>
      <includes>
        <include>pom.xml</include>
      </includes>
    </fileSet>

    <!-- The parent with all the project definitions. -->

    <fileSet filtered="true" encoding="UTF-8" packaged="false">
      <directory>__targetGroupId__.parent</directory>
      <includes>
        <include>pom.xml</include>
      </includes>
    </fileSet>

    <!-- The karaf parent containing the packaging definitions -->

    <fileSet filtered="true" encoding="UTF-8">
      <directory>__targetGroupId__.karaf.parent</directory>
      <includes>
        <include>pom.xml</include>
      </includes>
    </fileSet>

    <!-- A bundle with a custom branding -->

    <fileSet filtered="false" encoding="UTF-8">
      <directory>__targetGroupId__.karaf.branding</directory>
      <includes>
        <include>**/*.properties</include>
      </includes>
    </fileSet>

    <fileSet filtered="true" encoding="UTF-8">
      <directory>__targetGroupId__.karaf.branding</directory>
      <includes>
        <include>pom.xml</include>
        <include>osgi.bnd</include>
      </includes>
    </fileSet>

    <!-- The feature definitions to be filled in by the project-->

    <fileSet filtered="true" encoding="UTF-8">
      <directory>__targetGroupId__.karaf.features</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>

    <!-- A sample container ready to start -->

    <fileSet filtered="true" encoding="UTF-8" packaged="false">
      <directory>__targetGroupId__.karaf.sample</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

  </fileSets>
</archetype-descriptor>
