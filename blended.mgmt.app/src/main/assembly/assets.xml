<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>assets</id>
  <formats>
    <format>dir</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>.</directory>
      <includes>
        <include>index.html</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>target/scala-2.12/scalajs-bundler/main/node_modules/react/umd</directory>
      <includes>
        <include>react.production.min.js</include>
      </includes>
      <outputDirectory>assets</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>target/scala-2.12/scalajs-bundler/main/node_modules/react-dom/umd</directory>
      <includes>
        <include>react-dom.production.min.js</include>
      </includes>
      <outputDirectory>assets</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>target/scala-2.12/scalajs-bundler/main</directory>
      <includes>
        <include>blended-mgmt-app-opt*.*</include>
      </includes>
      <outputDirectory>assets</outputDirectory>
    </fileSet>

  </fileSets>
</assembly>