<project
xmlns="http://maven.apache.org/POM/4.0.0"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>de.woq.osgi.java</groupId>
    <artifactId>de.woq.osgi.java.parent</artifactId>
    <version>1.0.6-SNAPSHOT</version>
    <relativePath>../de.woq.osgi.java.parent</relativePath>
  </parent>

  <artifactId>de.woq.osgi.java.karaf.parent</artifactId>
  <packaging>pom</packaging>

  <properties>
    <woq.branding.groupId>${project.groupId}</woq.branding.groupId>
    <woq.branding.artifactId>de.woq.osgi.java.karaf.branding</woq.branding.artifactId>
    <woq.branding.version>${woq.container.version}</woq.branding.version>
  </properties>

  <dependencies>

    <dependency>
      <groupId>${woq.branding.groupId}</groupId>
      <artifactId>${woq.branding.artifactId}</artifactId>
      <version>${woq.branding.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf</groupId>
      <artifactId>apache-karaf</artifactId>
      <version>${karaf.version}</version>
      <type>tar.gz</type>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf</groupId>
      <artifactId>apache-karaf</artifactId>
      <version>${karaf.version}</version>
      <type>zip</type>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <!-- Dependencies for the offline installer -->
    <dependency>
      <groupId>org.apache.karaf.shell</groupId>
      <artifactId>org.apache.karaf.shell.wrapper</artifactId>
      <version>${karaf.version}</version>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>de.woq.osgi.java</groupId>
      <artifactId>de.woq.osgi.java.util</artifactId>
      <version>${woq.container.version}</version>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>de.woq.osgi.java</groupId>
      <artifactId>de.woq.osgi.java.installer</artifactId>
      <version>${woq.container.version}</version>
    </dependency>

    <dependency>
      <groupId>de.woq.osgi.java</groupId>
      <artifactId>de.woq.osgi.java.installer</artifactId>
      <version>${woq.container.version}</version>
      <type>linux</type>
      <classifier>scripts</classifier>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>de.woq.osgi.java</groupId>
      <artifactId>de.woq.osgi.java.installer</artifactId>
      <version>${woq.container.version}</version>
      <type>windows</type>
      <classifier>scripts</classifier>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

  </dependencies>

  <build>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.karaf.tooling</groupId>
          <artifactId>features-maven-plugin</artifactId>
          <version>${karaf.version}</version>

          <executions>
            <execution>
              <id>add-features-to-repo</id>
              <phase>generate-resources</phase>
              <goals>
                <goal>add-features-to-repo</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <repository>target/repository</repository>
          </configuration>
        </plugin>

        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <executions>

            <execution>
              <id>extract-karaf-linux</id>
              <phase>process-resources</phase>
              <goals>
                <goal>unpack-dependencies</goal>
              </goals>
              <configuration>
                <includeArtifactIds>apache-karaf</includeArtifactIds>
                <includeTypes>tar.gz</includeTypes>
                <outputDirectory>${project.build.directory}/linux</outputDirectory>
              </configuration>
            </execution>

            <execution>
              <id>extract-karaf-windows</id>
              <phase>process-resources</phase>
              <goals>
                <goal>unpack-dependencies</goal>
              </goals>
              <configuration>
                <includeArtifactIds>apache-karaf</includeArtifactIds>
                <includeTypes>zip</includeTypes>
                <outputDirectory>${project.build.directory}/windows</outputDirectory>
              </configuration>
            </execution>

            <execution>
              <id>extract-installer</id>
              <phase>process-resources</phase>
              <goals>
                <goal>copy-dependencies</goal>
              </goals>
              <configuration>
                <includeArtifactIds>de.woq.osgi.java.installer,de.woq.osgi.java.util,org.apache.karaf.shell.wrapper</includeArtifactIds>
                <outputDirectory>${project.build.directory}/installer</outputDirectory>
                <useRepositoryLayout>false</useRepositoryLayout>
              </configuration>
            </execution>

            <execution>
              <id>extract-branding</id>
              <phase>process-resources</phase>
              <goals>
                <goal>copy-dependencies</goal>
              </goals>
              <configuration>
                <includeArtifactIds>${woq.branding.artifactId}</includeArtifactIds>
                <outputDirectory>${project.build.directory}/branding</outputDirectory>
                <useRepositoryLayout>false</useRepositoryLayout>
              </configuration>
            </execution>

            <execution>
              <id>extract-descriptors</id>
              <phase>process-resources</phase>
              <goals>
                <goal>copy-dependencies</goal>
              </goals>
              <configuration>
                <includeArtifactIds>de.woq.osgi.java.karaf.parent</includeArtifactIds>
                <outputDirectory>${project.build.directory}/descriptors</outputDirectory>
                <useRepositoryLayout>false</useRepositoryLayout>
              </configuration>
            </execution>

          </executions>
        </plugin>

        <plugin>
          <artifactId>maven-assembly-plugin</artifactId>
          <executions>
            <execution>
              <id>CreateProduct</id>
              <phase>package</phase>
              <goals>
                <goal>single</goal>
              </goals>
            </execution>
          </executions>
        </plugin>

      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>src/main/assembly/linux.xml</file>
                  <type>linux</type>
                  <classifier>assembly</classifier>
                </artifact>
                <artifact>
                  <file>src/main/assembly/linux-nojre.xml</file>
                  <type>linux-nojre</type>
                  <classifier>assembly</classifier>
                </artifact>
                <artifact>
                  <file>src/main/assembly/windows.xml</file>
                  <type>windows</type>
                  <classifier>assembly</classifier>
                </artifact>
                <artifact>
                  <file>src/main/assembly/windows-nojre.xml</file>
                  <type>windows-nojre</type>
                  <classifier>assembly</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
