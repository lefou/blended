<project
xmlns="http://maven.apache.org/POM/4.0.0"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>de.woq.osgi.java</groupId>
    <artifactId>de.woq.osgi.java.parent</artifactId>
    <version>1.0-beta-2-SNAPSHOT</version>
    <relativePath>../de.woq.osgi.java.parent</relativePath>
  </parent>

  <artifactId>de.woq.osgi.java.karaf.parent</artifactId>
  <packaging>pom</packaging>

  <properties>
    <woq.config.groupId>${project.groupId}</woq.config.groupId>
    <woq.config.artifactId>de.woq.osgi.java.karaf.central</woq.config.artifactId>
    <woq.config.version>${woq.container.version}</woq.config.version>

    <woq.branding.groupId>${project.groupId}</woq.branding.groupId>
    <woq.branding.artifactId>de.woq.osgi.java.karaf.branding</woq.branding.artifactId>
    <woq.branding.version>${woq.container.version}</woq.branding.version>
  </properties>

  <dependencies>

    <dependency>
      <groupId>${woq.config.groupId}</groupId>
      <artifactId>${woq.config.artifactId}</artifactId>
      <version>${woq.config.version}</version>
    </dependency>

    <dependency>
      <groupId>${woq.branding.groupId}</groupId>
      <artifactId>${woq.branding.artifactId}</artifactId>
      <version>${woq.branding.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf</groupId>
      <artifactId>apache-karaf</artifactId>
      <version>${karaf.version}</version>
      <type>tar.gz</type>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>

          <execution>
            <id>extract-karaf</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeTypes>tar.gz</includeTypes>
              <outputDirectory>${project.build.directory}</outputDirectory>
            </configuration>
          </execution>

          <execution>
            <id>extract-config</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>${woq.config.artifactId}</includeArtifactIds>
              <outputDirectory>${project.build.directory}/apache-karaf-${karaf.version}</outputDirectory>
            </configuration>
          </execution>

          <execution>
            <id>extract-branding</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>${woq.branding.artifactId}</includeArtifactIds>
              <outputDirectory>${project.build.directory}/apache-karaf-${karaf.version}/lib</outputDirectory>
              <useRepositoryLayout>false</useRepositoryLayout>
            </configuration>
          </execution>

        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>CreateProduct</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/application.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
