<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference
   id="packageAdmin"
   interface="org.osgi.service.packageadmin.PackageAdmin"
   timeout="1000"/>

  <bean
   id="dependencyAnalyzer"
   class="de.woq.osgi.java.osgidep.internal.DependencyAnalyzerImpl">

    <property name="pkgAdmin" ref="packageAdmin"/>
    <property name="bundleContext" ref="blueprintBundleContext"/>
  </bean>

  <bean
   id="dotFileGenerator"
   class="de.woq.osgi.java.osgidep.internal.DOTFileGenerator"
   init-method="start">

    <property name="analyzer" ref="dependencyAnalyzer"/>
    <property name="generatorInfo">
      <list>
        <bean class="de.woq.osgi.java.osgidep.internal.GeneratorInfo">
          <property name="templateName" value="packageDependencies"></property>
          <property name="targetName" value="packageDependencies_complete.dot"></property>
        </bean>
        <bean class="de.woq.osgi.java.osgidep.internal.GeneratorInfo">
          <property name="templateName" value="serviceDependencies"></property>
          <property name="targetName" value="serviceDependencies_complete.dot"></property>
        </bean>
      </list>
    </property>
  </bean>

</blueprint>
