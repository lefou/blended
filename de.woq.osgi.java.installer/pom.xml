<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>de.woq.osgi.java</groupId>
    <artifactId>de.woq.osgi.java.parent</artifactId>
    <version>1.0-beta-3</version>
    <relativePath>../de.woq.osgi.java.parent</relativePath>
  </parent>

  <artifactId>de.woq.osgi.java.installer</artifactId>

  <dependencies>

    <dependency>
      <groupId>org.apache.karaf.shell</groupId>
      <artifactId>org.apache.karaf.shell.wrapper</artifactId>
      <version>${karaf.version}</version>
    </dependency>

    <dependency>
      <groupId>de.woq.osgi.java</groupId>
      <artifactId>de.woq.osgi.java.util</artifactId>
      <version>${project.version}</version>
    </dependency>

  </dependencies>

  <build>
    <plugins>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/classes/install-service.sh</file>
                  <type>linux</type>
                  <classifier>scripts</classifier>
                </artifact>
                <artifact>
                  <file>target/classes/install-service.bat</file>
                  <type>windows</type>
                  <classifier>scripts</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>


</project>
