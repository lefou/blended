<project 
  xmlns="http://maven.apache.org/POM/4.0.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>de.woq.osgi.java</groupId>
    <artifactId>de.woq.osgi.java.karaf.parent</artifactId>
    <version>1.0.7-SNAPSHOT</version>
    <relativePath>../de.woq.osgi.java.karaf.parent</relativePath>
  </parent>

  <properties>
    <woq.branding.groupId>${project.groupId}</woq.branding.groupId>
    <woq.branding.artifactId>de.woq.osgi.java.karaf.branding</woq.branding.artifactId>
    <woq.branding.version>${project.version}</woq.branding.version>
  </properties>

  <artifactId>de.woq.osgi.java.karaf.central</artifactId>

  <dependencies>
    <dependency>
      <groupId>de.woq.osgi.java</groupId>
      <artifactId>de.woq.osgi.java.karaf.parent</artifactId>
      <version>${woq.container.version}</version>
      <classifier>assembly</classifier>
      <type>linux-nojre</type>
    </dependency>

    <dependency>
      <groupId>de.woq.osgi.java</groupId>
      <artifactId>de.woq.osgi.java.karaf.parent</artifactId>
      <version>${woq.container.version}</version>
      <classifier>assembly</classifier>
      <type>windows-nojre</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>${project.build.directory}/descriptors/de.woq.osgi.java.karaf.parent-${woq.container.version}-assembly.linux-nojre</descriptor>
            <descriptor>${project.build.directory}/descriptors/de.woq.osgi.java.karaf.parent-${woq.container.version}-assembly.windows-nojre</descriptor>
          </descriptors>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>features-maven-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>mvn:${project.groupId}/${project.groupId}.karaf.features/${project.version}/xml/features</descriptor>
          </descriptors>
          <features>
            <feature>config</feature>
            <feature>ssh</feature>
            <feature>management</feature>
            <feature>kar</feature>
            <feature>scr</feature>
            <feature>http</feature>
            <feature>http-whiteboard</feature>
            <feature>war</feature>
            <feature>woq-camel</feature>
            <feature>woq-activemq-broker</feature>
            <feature>hawtio</feature>
            <feature>woq-samples</feature>
          </features>
          <repository>target/repository</repository>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
