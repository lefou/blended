<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="shutdownBean" class="de.woq.blended.container.context.internal.ContainerShutdown" init-method="init">
    <property name="bundleContext" ref="blueprintBundleContext" />
    <property name="mBeanServer">
      <reference interface="javax.management.MBeanServer" timeout="1000" />
    </property>
  </bean>

  <bean id="context" class="de.woq.blended.container.context.internal.ContainerContextImpl" >
    <property name="containerShutdown" ref="shutdownBean" />
  </bean>

  <service
    interface="de.woq.blended.container.context.ContainerContext"
    ref="context" />

</blueprint>
